                @Html.DisplayFor(modelItem => item.IntIdBarrio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IntIdTipoPersona)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IntIdPersona">Edit</a> |
