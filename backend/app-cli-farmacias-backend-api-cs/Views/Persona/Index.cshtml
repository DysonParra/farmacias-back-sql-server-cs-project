                @Html.DisplayNameFor(model => model.StrApellidoPersona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StrDireccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StrGenero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StrNombrePersona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StrTelefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IntIdBarrio)
