        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StrApellidoPersona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StrDireccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StrGenero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StrNombrePersona)
            </td>
